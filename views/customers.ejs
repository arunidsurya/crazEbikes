<%- include('layout/headerAdmin') %>
    <%- include('layout/sidebarAdmin') %>



        <div class="col py-3">


            <div class="container">
                <div class="mt-4">
                    <h4>Customers</h4>
                    <div class="row my-4">
                        <div class="col-lg-12"> <!-- Adjust the column width as needed -->
                            <form action="/admin/add-customer-page" class="ml-auto" method="get">
                                <button class="btn btn-primary float-end">Add Customers</button>
                            </form>
                        </div>
                    </div>

                    <div class="filter-sort-options d-flex justify-content-between">
                        <form action="/admin/customer-search" method="post" class="form-inline" style="display:flex">
                            <input name="searchKey" class="form-control mr-sm-2" type="search" placeholder="Search"
                                aria-label="Search">
                            <button class="btn btn-outline-success my-0 my-sm-0" type="submit">Search</button>
                        </form>
                    </div>


                    <div class="row my-4">
                        <div class="col-lg-12">
                            <div class="table-responsive">
                                <% if (locals.users) { %>
                                    <table class="table table-striped text-center">
                                        <thead>
                                            <tr class="table-dark">
                                                <th>Sl No</th>
                                                <th>Name</th>
                                                <th>Email</th>
                                                <th>Contact</th>
                                                <th>Action</th>
                                                <th>Block</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% const startSerialNumber=(currentPage - 1) * PRODUCTS_PER_PAGE + 1; %>
                                                <% users.forEach((user,index)=> { %>
                                                    <tr class="align-middle">
                                                        <td>
                                                            <%= startSerialNumber + index %>
                                                        </td>
                                                        <td>
                                                            <%= user.name %>
                                                        </td>
                                                        <td>
                                                            <%= user.email %>
                                                        </td>
                                                        <td>
                                                            <%= user.contactNumber %>
                                                        </td>
                                                        <td>
                                                            <a href="/admin/edit-customer-page/<%= user._id %>"
                                                                class="text-success"><i
                                                                    class="fas fa-edit fa-lg mx-1"></i></a>
                                                            <!-- <a href="/admin/deleteCustomers/<%= user._id %>"
                                                                class="text-danger"
                                                                onclick="return confirm('Are you sure want to delete this product?')"><i
                                                                    class="fas fa-trash fa-lg mx-1"></i></a> -->
                                                                    <a 
                                                                        class="text-danger"
                                                                        onclick="handleDelete('<%= user._id %>')"><i
                                                                            class="fas fa-trash fa-lg mx-1"></i></a>


                                                                            <div id="modal<%= user._id %>" class="modal">
                                                                                <span
                                                                                    onclick="document.getElementById('modal<%= user._id %>').style.display='none'"
                                                                                    class="close" title="Close Modal">Ã—</span>
                                                                                <form class="modal-content"
                                                                                    action="/admin/deleteCustomers/<%= user._id %>">
                                                                                    <div class="modal-container">
                                                                                        <h1>Delete Account</h1>
                                                                                        <p>Are you sure you want to delete this product?
                                                                                        </p>
                
                                                                                        <div class="clearfix">
                                                                                            <button type="button"
                                                                                                onclick="document.getElementById('modal<%= user._id %>').style.display='none'"
                                                                                                class="cancelbtn">Cancel</button>
                                                                                            <button type="submit"
                                                                                                onclick="document.getElementById('modal<%= user._id %>').style.display='none'"
                                                                                                class="deletebtn">Delete</button>
                                                                                        </div>
                                                                                    </div>
                                                                                </form>
                                                                            </div>
                                                        </td>
                                                        <td>
                                                            <% if (user.isBlocked) { %>
                                                                <form action="/admin/unBlockCustomers/<%= user._id %>">
                                                                    <button
                                                                        class="<%= user.isBlocked? 'btn btn-primary btn-sm' :'btn btn-danger btn-sm' %>">Unblock</button>
                                                                </form>
                                                                <% } else { %>
                                                                    <form
                                                                        action="/admin/blockCustomers/<%= user._id %>">
                                                                        <button
                                                                            class="btn btn-danger btn-sm">Block</button>
                                                                    </form>
                                                                    <% } %>
                                                        </td>
                                                    </tr>
                                                    <% }) %>
                                        </tbody>
                                    </table>
                                    <% } %>

                            </div>
                        </div>
                    </div>
                    <!-- Pagination -->
                    <div class="row">
                        <div class="col-lg-12">
                            <nav aria-label="Page navigation">
                                <ul class="pagination justify-content-center">
                                    <% if (currentPage> 1) { %>
                                        <li class="page-item">
                                            <a class="page-link" href="/admin/user?page=<%= currentPage - 1 %>"
                                                aria-label="Previous">
                                                <span aria-hidden="true">&laquo;</span>
                                            </a>
                                        </li>
                                        <% } %>
                                            <% for (let i=1; i <=totalPages; i++) { %>
                                                <li class="page-item <%= currentPage == i ? 'active' : '' %>">
                                                    <a class="page-link" href="/admin/user?page=<%= i %>">
                                                        <%= i %>
                                                    </a>
                                                </li>
                                                <% } %>
                                                    <% if (currentPage < totalPages) { %>
                                                        <li class="page-item">
                                                            <a class="page-link"
                                                                href="/admin/user?page=<%= currentPage + 1 %>"
                                                                aria-label="Next">
                                                                <span aria-hidden="true">&raquo;</span>
                                                            </a>
                                                        </li>
                                                        <% } %>
                                </ul>
                            </nav>
                        </div>
                    </div>



                    <script>
                        function handleDelete(userId) {
                            const modalDiv = document.getElementById('modal' + userId);
                            modalDiv.style.display = 'block';
                        }
                    </script>
                    <script>
                        // When the user clicks anywhere outside of a modal, close it
                        window.onclick = function (event) {
<% users.forEach(user => { %>
var modal<%= user._id %> = document.getElementById('modal<%= user._id %>');
                            if (event.target == modal <%= user._id %> ) {
                                modal <%= user._id %>.style.display = "none";
                            }
<% }); %>
}
                    </script>


                    <%- include('layout/footerAdmin') %>