<script>
    document.getElementById("signout-btn").addEventListener("click", logout);
function logout() {
  deleteCookie("useruid"); 
  toggleSignButtons(); 
 
}

function deleteCookie(name) {
  document.cookie = name + "=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/;";
}
    // Function to check if the user is logged in
function isLoggedIn() {
  return document.cookie.indexOf("useruid=") !== -1;
}

// Function to show/hide "Sign In" and "Sign Out" buttons
function toggleSignButtons() {
  const signoutBtn = document.getElementById("signout-btn");
  const signinBtn = document.getElementById("signin-btn");

  if (isLoggedIn()) {
    signoutBtn.style.display = "block";
    signinBtn.style.display = "none";
  } else {
    signoutBtn.style.display = "none";
    signinBtn.style.display = "block";
  }
}

// Check and toggle buttons when the page loads
toggleSignButtons();

</script>



