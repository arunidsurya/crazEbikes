<%- include('layout/headerAdmin') %>
  <%- include('layout/sidebarAdmin') %>



    <div class="col py-3">


      <div class="container primary">
        <div class="row">
          <div class="col-lg-12 mx-auto mt-4">
            <div class="card shadow">
              <div class="card-header bg-success">
                <h3 class="text-light">Edit Coupon </h3>
              </div>
              <div class="card-body p-4">
                <form action="/admin/editCoupon/<%= coupon._id %>" method="post" id="add-form">

                  <div class="form-group row">
                  </div>
                  <div class="form-group row">

                    <label for="product_name" class="col-sm-2 col-form-label">Coupon Name:</label>
                    <div class="col-sm-10">
                      <input type="text" name="name" value="<%= coupon.name %>" class="form-control" id="category_name">
                    </div>

                    <label for="brand" class="col-sm-2 col-form-label">Amount:</label>
                    <div class="col-sm-10">
                      <input type="text" name="amount" value="<%= coupon.amount %>" class="form-control" id="brand">
                    </div>

                    <label for="color" class="col-sm-2 col-form-label">Max Usage:</label>
                    <div class="col-sm-10">
                      <input type="text" name="maxUsage" value="<%= coupon.maxUsage %>" class="form-control" id="brand">
                    </div>


                    <label for="retail_price" class="col-sm-2 col-form-label">Expiry Date:</label>
                    <div class="col-sm-10">
                      <input type="date" name="expiresAt" class="form-control" value="<%= coupon.expiresAt %>"
                        id="expiresAtInput" >
                    </div>


                    <label for="category_description" class="col-sm-2 col-form-label">Description:</label>
                    <div class="col-sm-10">
                      <input type="text" name="description" value="<%= coupon.description %>" class="form-control">
                    </div>
                  </div>
                  <center>
                    <button type="submit" class="text-center mt-4 btn btn-success">Submit</button>
                  </center>

                </form>
              </div>
            </div>
          </div>
        </div>
      </div>


    </div>
    </div>
    </div>

    <script>
      $(function () {
        // Replace 'expiresAtInput' with the ID of your input field
        $("#expiresAtInput").datepicker();
      });
    </script>


    <%- include('layout/footerAdmin') %>