<%- include('../layout/headerAdmin') %>

  <%- include('../layout/sidebarAdmin') %>



    <div class="col py-3">
      <h4>Add Customers</h4>
      <% if (locals.message) { %>
        <h7 style="color: red;">
          <%= message %>
        </h7>
        <% } %>
          <h5></h5>
          <form action="/admin/addUser" method="post">
            <div class="form-group row">
            </div>
            <div class="form-group row">
              <label for="name" class="col-sm-2 col-form-label">Name:</label>
              <div class="col-sm-10">
                <input type="text" name="name" class="form-control">
              </div>
              <label for="email" class="col-sm-2 col-form-label">Email:</label>
              <div class="col-sm-10">
                <input type="text" name="email" class="form-control">
              </div>
              <label for="password" class="col-sm-2 col-form-label">Password:</label>
              <div class="col-sm-10">
                <input type="password" name="password" class="form-control">
              </div>
              <label for="contactNumber" class="col-sm-2 col-form-label">Contact Number:</label>
              <div class="col-sm-10">
                <input type="text" name="contactNumber" class="form-control">
              </div>

            </div>
            <center>
              <button type="submit" class="text-center mt-4 btn btn-success">Submit</button>
            </center>

          </form>

          <a href="/admin/user">Back to customers view</a>

    </div>
    </div>
    </div>




    <%- include('../layout/footerAdmin') %>