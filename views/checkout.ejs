    </script>

    <script>
      function updateCart(inputElement) {
        console.log('updateCart function called');
        const itemId = inputElement.getAttribute('data-item-id');
        const newQuantity = inputElement.value;

        function formatPrice(price) {
          // You can implement your price formatting logic here
          // For example, you can round the price to 2 decimal places and add a currency symbol
          return `${price.toFixed(2)}`;
        }

        fetch('/user/updateCartQuantity', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ itemId, newQuantity }),
        })
          .then(response => {
            if (response.ok) {
              return response.json();
            } else {
              throw new Error('Network response was not ok.');
            }
          })
          .then(data => {
            console.log('Data received:', data);
            // Handle successful JSON response here
            // You can update the UI with the new data if needed
            // Assuming data contains the updated cartTotal and totalQunatity values
            const cartTotalSpan = document.getElementById('CartTotalPrice');
            const TotalPriceSpan = document.getElementById('TotalPrice');

            cartTotalSpan.innerHTML = formatPrice(data.cartTotal);
            TotalPriceSpan.innerHTML = formatPrice(data.cartTotal + 10);


          })
          .catch(error => {
            console.error('Error updating quantity:', error);
            // Handle the error here (e.g., display an error message to the user)
          });
      }
    </script>
    <script>
      function updateTotalPrice() {
        // Get the cart total and shipping cost elements
        const cartTotalElement = document.getElementById('cartTotalPrice');
        const shippingCostElement = document.querySelector('.d-flex:contains("Shipping cost")');

        if (cartTotalElement && shippingCostElement) {
          // Extract and parse the cart total and shipping cost values
          const cartTotal = parseFloat(cartTotalElement.textContent.replace('$', ''));
          const shippingCost = parseFloat(shippingCostElement.textContent.match(/\d+\.\d+/)[0]);

          // Calculate the total price
          const totalPrice = cartTotal + shippingCost;

          // Update the total price element
          const totalPriceElement = document.getElementById('totalPrice');
          if (totalPriceElement) {
            totalPriceElement.textContent = `$${totalPrice.toFixed(2)}`;
          }
        }
      }

      // Call the updateTotalPrice function whenever needed
      updateTotalPrice();

    </script>
